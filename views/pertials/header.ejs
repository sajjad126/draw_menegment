    // logout funtion 
    function logout(){
        fetch("/login",{
            method: "DELETE"
        })
        setTimeout(() => {
            
            window.location.replace("/login")
        }, 1000);
    }

    // menu toggle 
    const menu_toggle = document.querySelector(".menu_toggler");
    const main_menu = document.querySelector(".menu_main");
    menu_toggle.addEventListener("click",()=>{
        main_menu.classList.toggle("active")
    })
</script>